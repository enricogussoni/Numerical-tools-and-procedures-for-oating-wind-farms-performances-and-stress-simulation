FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    lower
    {
        type            zeroGradient;
    }
    upper
    {
        type            fixedGradient;
        gradient        uniform 0.003;
    }
    west
    {
        type            cyclic;
    }
    east
    {
        type            cyclic;
    }
    north
    {
        type            cyclic;
    }
    south
    {
        type            cyclic;
    }
}


